<%- include ../partials/header.ejs%>

<%- include ../partials/main_nav.ejs%>

<!-- Main Content -->

<body>
	<main class="container">
		<div class="jumbotron">
			<div class="offset-md-1 col-md-10">
			<h1 class="display-4"><%= title %></h1>
			<p class="lead"></p>
			<hr class="my-4">
            <p>Add a new contact to the Business View List</p>
            <hr class="my-4">


                <form class="form" method="POST">
                    <div class="form-group">
                        <label for="nameTextField">Name</label>
                        <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter the Name"
                        name="name" required>
                    </div>

                    <div class="form-group">
                        <label for="numberTextField">Number</label>
                        <input type="text" class="form-control"
                        id="numberTextField"
                        placeholder="Enter the Number"
                        name="number" required>
                    </div>

                    <div class="form-group">
                        <label for="emailTextField">Email</label>
                        <input type="text" class="form-control"
                        id="emailTextField"
                        placeholder="Enter the Email"
                        name="email" required>
                    </div>

                    <br>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit</button>

                        <a href="/businesscontact-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>


                </form>
				




                 </div>
                </div>
			</main>



